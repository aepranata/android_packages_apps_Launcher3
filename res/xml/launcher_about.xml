<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <Preference
            android:key="about_banana"
            android:title="@string/about_banana_title"
            android:summary="@string/about_banana_summary"
            android:persistent="false" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/bananadroid/android_packages_apps_Launcher3" />
